<h1>Friend requests</h1>
<h2>Accept Friends</h2>
<% @request.each do |friend| %>
  <% if friend.status == 2 %>
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= friend.user.name %><%= friend.id %></h3>
      <div class="btn-group" role="group">
        <%= link_to 'Accept', user_accept_path(friend), method: :put, class: 'btn btn-success' %>
        <%= link_to 'Reject', user_reject_path(friend), method: :put, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>